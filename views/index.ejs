<%- include('./partials/start.ejs') %>
  <!-- partial -->
  <div class="main-panel">
    <div class="content-wrapper">
      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <div class="col-12 d-flex justify-content-between align-items-center mb-2">
              <h3 class="font-weight-bold mb-0">Movie Collection</h3>
              <a href="/" class="btn client-btn d-flex align-items-center gap-2">
                <i class="mdi mdi-view-grid"></i>
                Client Side
              </a>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="w-100 mt-3">
          <div class="card">
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-striped table-borderless text-center">
                  <thead>
                    <tr>
                      <th>Movie</th>
                      <th>Genre</th>
                      <th>Movie Cover</th>
                      <th>Release Date</th>
                      <th>Rating</th>
                      <th>Description</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% movies.map((movie)=> { %>
                      <tr>
                        <td>
                          <%= movie.name %>
                        </td>
                        <td>
                          <%= movie.genre %>
                        </td>
                        <td><img src="/<%= movie.file %>" alt="<%= movie.name %>"></td>
                        <td>
                          <%= movie.date %>
                        </td>
                        <td class="font-weight-medium">
                          <span class="badge badge-warning text-white">
                            <%= movie.rating %>
                          </span>
                        </td>
                        <td>
                          <a href="/admin/description/<%= movie._id %>">View</a>
                        </td>
                        <td class="font-weight-medium">
                          <a href="/admin/edit-movie/<%= movie._id %>" class="badge badge-success">Edit</a>
                          <a href="/admin/delete-movie/<%= movie._id %>" class="badge badge-danger">Delete</a>
                        </td>
                      </tr>
                      <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('./partials/end.ejs') %>